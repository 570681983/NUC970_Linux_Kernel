/dts-v1/;
/include/ "nuc970.dtsi"
/* /include/ "nuc972.dtsi" */

/ {
	model = "Nuvoton NUC972 EVB";
	compatible = "nuvoton,nuc972-evb", "nuvoton,nuc972", "nuvoton,nuc970";

	chosen {
		bootargs = "root=/dev/ram0 console=ttyS0,115200n8 rdinit=/sbin/init mem=64M";
	};
	
	apb {
		uart1: serial@b8000100 {
			status = "okay";
		};

		uart2: serial@b8000200 {
			status = "okay";
		};

		uart3: serial@b8000300 {
			status = "okay";
		};

		uart4: serial@b8000400 {
			status = "okay";
		};

		adc: adc@b800a000 {
			keypad-status = "okay";
			touch-status = "okay";
			status = "okay";
		};
		
		i2c_gpio@0 {
			status = "okay";
		};

	ahb {
		usbh_ehci@b0005000 {
			status = "okay";
		};
		usbh_ohci@b0007000{
			status = "okay";
		};
		emac0@b0002000 {
			status = "okay";
		};
		cap@b000e000 {
			status = "okay";
		};
		dma@b0004000 {
			status = "okay";
		};
		ebi@b0001000 {
			status = "okay";
		};
	};
};
