/dts-v1/;
/include/ "nuc970.dtsi"
/* /include/ "nuc972.dtsi" */

/ {
	model = "Nuvoton NUC972 EVB";
	compatible = "nuvoton,nuc972-evb", "nuvoton,nuc972", "nuvoton,nuc970";

	chosen {
		bootargs = "root=/dev/ram0 console=ttyS0,115200n8 rdinit=/sbin/init mem=64M";
	};
	
	apb {
		uart1: serial@b8000100 {
			status = "okay";
		};

		uart2: serial@b8000200 {
			status = "okay";
		};

		uart3: serial@b8000300 {
			status = "okay";
		};

		uart4: serial@b8000400 {
			status = "okay";
		};

		can0: can@b800b000 {
			status = "disabled";
		};

		can1: can@b800b400 {
			status = "disabled";
		};

		kpi: kpi@b8008000 {
			status = "disabled";
		};

		rtc: rtc@b8004000 {
			status = "disabled";
		};

		jpeg: jpeg@b000a000 {
			status = "disabled";
		};

		adc: adc@b800a000 {
			keypad-status = "okay";
			touch-status = "okay";
			status = "okay";
		};
		
		i2c_gpio@0 {
			status = "okay";
		};

		i2c0: i2c0@b8006000 {            
			status = "okay";
			
			nau8822: nau8822@1a {
				compatible = "nuvoton,nau8822";
				reg = <0x1a> ;
			};
		};
		
		i2c1: i2c1@b8006100 {
			status = "okay";
		};
		
		pwm: pwm@b8007000 {
			status = "okay";
		};
		
		spi0: spi0@b8006200 {
			status = "okay";
			#address-cells = <1>;
			#size-cells = <0>;
			
			num_cs  = <2>;
			lsb     = <0>;
			txneg   = <1>;
			rxneg   = <0>;
			divider = <4>;
			sleep   = <0>;
			txnum   = <0>;
			txbitlen = <8>;
			bus_num	= <0>;
			
			flash: m25p80@0 {
					compatible = "w25q128";                     
					#address-cells = <1>;
					#size-cells = <1>;
					reg = <0>;
					spi-max-frequency = <12000000>;
					
					partition@0 {
						label = "kernel";
						reg = <0x00000000 0x0800000>;
					};
					partition@1 {
						label = "rootfs";
						reg = <0x0800000 0x0800000>;
					};                   
			};
		};
		
		spi1: spi1@b8006300 {
			status = "okay";
			#address-cells = <1>;
			#size-cells = <0>;
		   
			num_cs  = <2>;
			lsb     = <0>;
			txneg   = <1>;
			rxneg   = <0>;
			divider = <4>;
			sleep   = <0>;
			txnum   = <0>;
			txbitlen = <8>;
			bus_num	= <1>;
						
			spidev@0x01 {
				compatible = "spidev";               
				spi-max-frequency = <30000000>;
				reg = <0>;
			};
		};
	};

	ahb {
		usbh_ehci@b0005000 {
			status = "okay";
		};
		usbh_ohci@b0007000{
			status = "okay";
		};

        usbdev@b0006000 {
			status = "okay";
        };
        fmi@b000d000 {
			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_nand_pc>;
            status = "okay";
        };
        sdh@b000c000 {
			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_sd0>;
            status = "okay";
        };

		emac0@b0002000 {
			status = "okay";
		};
		cap@b000e000 {
			status = "okay";
		};
		dma@b0004000 {
			status = "okay";
		};
		ebi@b0001000 {
			status = "okay";
		};
		emac1@b0003000 {
			status = "okay";
		};
		
		lcd@b0008000 {
			status = "okay";
			type = <0x200>;
			bpp = <32>;
			width = <800>;
			height = <480>;
			xres = <800>;
			yres = <480>;
			pixclock = <20000000>;
			left_margin = <88>;
			right_margin = <40>;
			hsync_len = <48>;
			upper_margin = <32>;
			lower_margin = <13>;
			vsync_len = <3>;
			dccs = <0x0e00020a>;
			fbctrl = <0x03200320>;
			devctl = <0x070000c0>; 
			scale = <0x04000400>;
			gpio_blen = <0xC3>;
			gpio_lcs = <0xC2>;
			
		};
		
		i2s: i2s@b0009000 {
			status = "okay";
		};
		
		i2s_pcm: i2s_pcm {
			status = "okay";
		};   
		
		sound {
			compatible = "nuvoton,nuc970-audio";
			i2s-controller = <&i2s>;
			i2s-platform = <&i2s_pcm>;
		};
		
		ge2d@b000b000 {
			status = "okay";
		};
	};
};
